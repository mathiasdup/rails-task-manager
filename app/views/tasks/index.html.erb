<h1>MY TASKS</h1>

<ul>
  <% @tasks.each do |task| %>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
   <li>
    <%= link_to task.title, task_path(task) %>
    <% if task.completed == true %>
      <input type="checkbox" checked>
    <% else %>
      <input type="checkbox">
    <% end %>
    <%= task.title %>
   </li>
  <% end %>
</ul>
